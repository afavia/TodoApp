<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.anthony.parsetodo.activities.TaskActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/description"
        android:id="@+id/description_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_text_view"
        android:layout_alignLeft="@+id/due_date_edit_text"
        android:layout_alignStart="@+id/due_date_edit_text"
        android:layout_marginBottom="30dp"
        android:layout_alignRight="@+id/due_date_edit_text"
        android:layout_alignEnd="@+id/due_date_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/due_date_string"
        android:id="@+id/due_date_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/due_date_edit_text"
        android:layout_above="@+id/notes_edit_text"
        android:layout_alignLeft="@+id/notes_edit_text"
        android:layout_alignStart="@+id/notes_edit_text"
        android:layout_marginBottom="30dp" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/completed_check_box_title"
        android:id="@+id/completed_check_box"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/notes_edit_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/notes_string"
        android:id="@+id/notes_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/notes_edit_text"
        android:layout_marginBottom="109dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done_string"
        android:id="@+id/done_button"
        android:layout_gravity="right" />

</LinearLayout>
